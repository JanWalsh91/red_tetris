Structures:

Server:
Game
{
	Players[]
	isPlaying
	numPlayers
	allPieces[]

	generatePieces()
}

Player
{
	Board
	name
	isHost
}

Board
{
	size (10 cols 20 rows)
	pieces[]
	currentPiece
	newPieces[]
	isPlaying
	winStatus
}

Piece
{
	type
	{
		int
		color
	}
	coords
	rotation
	isMoving
}
